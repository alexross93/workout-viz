<body class="home">
  <%- include('partials/navbar.ejs'); %>

  <div id="content">
    <div class="container">

      <div class="col s12 center">
        <b>Goal: 30 minutes of cardio on the eliptical machine 4 days a week</b>
      </div>

      <div class="col s12 center">
        <div class="input-field">
          <a href="#addWorkoutModal" class="waves-effect waves-light btn-large red darken-2 modal-trigger">ADD WORKOUT
            <i class="material-icons right">fitness_center</i>
          </a>
        </div>
      </div>


      <div id="table-container">
        <table>
          <thead>
            <tr>
              <th>Year</th>
              <th>Month</th>
              <th>Day</th>
              <th>Time of Day</th>
              <th>Distance (miles)</th>
              <th>Distance (km)</th>
              <th>Calories</th>
              <th>Strides</th>
              <th>SPM</th>
              <th>Time (min)</th>
            </tr>
          </thead>
          <tbody>
            <% for (let elem in workoutMap) {  %>
            <tr>
              <td><%=workoutMap[elem].year%></td>
              <td><%=workoutMap[elem].month%></td>
              <td><%=workoutMap[elem].day%></td>
              <td><%=workoutMap[elem].timeOfDay%></td>
              <td><%=workoutMap[elem].distance%></td>
              <td><%=((workoutMap[elem].distance)*1.609344).toFixed(2)%></td>
              <td><%=workoutMap[elem].calories%></td>
              <td><%=workoutMap[elem].strides%></td>
              <td><%=workoutMap[elem].spm%></td>
              <td><%=workoutMap[elem].time%></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>


  <!-- ADD WORKOUT MODAL -->
  <div class="modal" id="addWorkoutModal">
    <div class="modal-content">
      <form action="/" method="POST" id="workoutForm">
        <br/><button class="btn grey darken-3">Add workout</button><br/>

        <div class="input-field">
          <input type="text" value="" id="distance" name="distance" required />
          <label class="active" for="distance">Distance</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="calories" name="calories" required />
          <label class="active" for="calories">Calories</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="strides" name="strides" required />
          <label class="active" for="strides">Strides</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="year" name="year" required />
          <label class="active" for="year">Year</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="month" name="month" required />
          <label class="active" for="month">Month</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="day" name="day" required />
          <label class="active" for="day">Day</label>
        </div>

        <div class="input-field">
          <input type="text" value="" id="timeOfDay" name="timeOfDay" required />
          <label class="active" for="timeOfDay">Time of Day</label>
        </div>

        <div class="input-field">
          <input type="text" value="30" id="time" name="time" required />
          <label class="active" for="time">Time (mins)</label>
        </div>

        
        <p class="error red-text center-align"></p>
      </form>
    </div>
  </div>


