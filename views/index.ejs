  <script>
    var dt = new Date();

    $('#year').val(dt.getFullYear());

    const monthNames = ["January", "February", "March", "April", "May", "June",
      "July", "August", "September", "October", "November", "December"
    ];

    $('#month').val(monthNames[dt.getMonth()]);

    $('#day').val(dt.getDate());

    $('#timeOfDay').val(dt.getHours() + ":" + dt.getMinutes());



